# Basic vars
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set icons
set period 1

# interpreter for shell commands
set shell zsh
map <enter> shell
set icons
set scrolloff 10      # space on top and bottom of screen
set preview on        # preview file on the right pane
set ratios '1:2:3'

# cmds/functions
cmd open ${{
    case $(file --mime-type "$(stat -f $f)" -b) in
        audio/*) mpv --audio-display=no $f ;;
        video/*) mpv $f -quiet ;;
        application/pgp-encrypted) $EDITOR $fx ;;
        *) for f in $fx; do $OPENER $f >/dev/null 2>&1; done;;
    esac
}}

cmd delete ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	printf "%s\n\t" "$fx"
	printf "delete?[y/N]"
	read ans
	[ $ans = "y" ] && sudo rm -rf -- $fx
}}

map D delete

cmd mkdir $mkdir -p "$(echo $* | tr ' ' '\ ')"

# Bindings
map g top
map . set hidden!
map <c-f> $lf -remote "send $id select \"$(fzf)\""

